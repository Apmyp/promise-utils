{
  "name": "promise-utils",
  "version": "1.0.0",
  "description": "Lodash-like utilities for dealing with promises",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "lintSrc": "tslint --project tsconfig.json --config tslint.js 'src/**/*.ts'",
    "lintTest": "tslint --project tsconfig.json --config tslint.test.js 'test/**/*.ts'",
    "lint": "yarn lintSrc && yarn lintTest",
    "lintFix": "yarn lintSrc --fix && yarn lintTest --fix",
    "testCode": "nyc ava",
    "test": "tsc && yarn testCode && yarn lint",
    "start": "grunt"
  },
  "repository": {
    "type": "git",
    "url": "git@git.blendlabs.com:blend/promise-utils.git"
  },
  "ava": {
    "files": [
      "dist/test/**/*.test.js"
    ],
    "source": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "concurrency": 5,
    "verbose": true,
    "timeout": "10000",
    "failFast": false,
    "powerAssert": true
  },
  "nyc": {
    "reporter": [
      "html",
      "json",
      "text"
    ],
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100,
    "statements": 100,
    "exclude": [
      "dist/test/**/*.js"
    ]
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/lodash": "4.14.106",
    "ava": "0.25.0",
    "grunt": "1.0.2",
    "grunt-ava": "0.19.0",
    "grunt-contrib-watch": "1.0.0",
    "grunt-ts": "6.0.0-beta.19",
    "grunt-tslint": "5.0.1",
    "nyc": "11.6.0",
    "tslint": "5.9.1",
    "typescript": "2.8.1"
  },
  "dependencies": {
    "lodash": "4.17.5"
  }
}
